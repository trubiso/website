generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model qa {
  created_at DateTime @id @db.Timestamptz(6)
  question   String
  answer     String?
}

model user {
  id       String   @id @db.Uuid
  username String   @unique
  password String
  token    String[]
  creation DateTime @db.Timestamptz(6)
  profile  profile?
}

model profile {
  user     user     @relation(fields: [id], references: [id])
  id       String   @id @db.Uuid
  name     String?
  avatar   String?
  bg       String?
  isBgLink Boolean?
  isBgTile Boolean?
  text     String?
  accent   String?
  banner   String?
  bio      String?
  location String?
  website  String?
}
